pipeline {
    agent any
    environment {
        PANDOC_IMAGE = 'pandoc/latex'
    }

    stages {
        stage('Run Pandoc') {
            steps {
                script {
                    sh 'pwd'
                    sh 'ls -lha'
                    sh "docker run --rm -v '${pwd()}:/workspace' -w /workspace -u '$(id -u ${USER}):$(id -g ${USER})' ${PANDOC_IMAGE} README.md -o output.html"
                    sh "cat output.html"
                }
            }
        }
    }
}
