pipeline {
    agent any
    environment {
        PANDOC_IMAGE = 'jagregory/pandoc'
    }

    stages {
        stage('Run Pandoc') {
            steps {
                script {
                    sh 'pwd'
                    sh 'ls'
                    sh "docker run --rm -v .:/source ${PANDOC_IMAGE} -f markdown -t html5 README.md -o output.html"
                    sh "cat output.html"
                }
            }
        }
    }
}
