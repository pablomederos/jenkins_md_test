pipeline {
    agent any
    environment {
        PANDOC_IMAGE = 'pandoc/latex:latest'
    }

    stages {
        stage('Run Pandoc') {
            steps {
                script {
                    sh 'pwd'
                    sh 'ls'
                    sh "docker run --rm -v .:/workspace -w /workspace ${PANDOC_IMAGE} pandoc README.md -o output.html"
                    sh "cat output.html"
                }
            }
        }
    }
}
